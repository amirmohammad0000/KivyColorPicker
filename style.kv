############################################################### Start Screen
MDScreen:
    # Start Get Number
    MDLabel:
        text: "Red :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.15, "center_y": 0.9}


    MDTextField:
        id: input_get_red
        hint_text: "Red     "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.218, "center_y": 0.9}


    MDLabel:
        text: "Green :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.45, "center_y": 0.9}


    MDTextField:
        id: input_get_green
        hint_text: "Green    "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.528, "center_y": 0.9}


    MDLabel:
        text: "Blue :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.75, "center_y": 0.9}


    MDTextField:
        id: input_get_blue
        hint_text: "Blue    "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.82, "center_y": 0.9}


    MDRaisedButton:
        text: "Result"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        font_size: 40
        size_hint: [0.1, 0.1]
        on_press:
            app.result()
    # End Get Number



    # Start Result
    MDLabel:
        text: "- - - - RESULT - - - -"
        font_size: 50
        halign: "center"
    # End Result


    # Start Set Number
    MDLabel:
        text: "Red :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.15, "center_y": 0.4}


    MDTextField:
        id: input_set_red
        hint_text: "Red     "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.218, "center_y": 0.4}


    MDLabel:
        text: "Green :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.45, "center_y": 0.4}


    MDTextField:
        id: input_set_green
        hint_text: "Green    "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.528, "center_y": 0.4}


    MDLabel:
        text: "Blue :"
        font_size: 40
        halign: "center"
        pos_hint: {"center_x": 0.75, "center_y": 0.4}


    MDTextField:
        id: input_set_blue
        hint_text: "Blue    "
        mode: "rectangle"
        size_hint: None, None
        width: 150
        height: 50
        pos_hint: {"center_x": 0.82, "center_y": 0.4}
    # Start Set Number


    # Start Button Copy
    MDRaisedButton:
        text: "Copy Number"
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
        font_size: 30
        size_hint: [0.1, 0.1]
        on_press:
            app.copy()
    # End Button Copy
############################################################### End Screen